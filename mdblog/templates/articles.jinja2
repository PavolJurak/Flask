{% extends "_main.jinja2" %}
{% block title %} About Page {% endblock %}

{% block main %}

<ul>
    {% if articles %}
        {% for article in articles %}
        <li>
            <h2><a href="{{ url_for('view_article',art_id=article.id) }}">{{ article.title }}</a></h2>
            <p>{{ article.content | truncate(100) }}</p>
        </li>
        {% endfor %}
    {% else %}
        <p>No articles :(</p>
    {% endif %}
</ul>

{% endblock %}